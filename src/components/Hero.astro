---
import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
const slides: CollectionEntry<"hero">[] = await getCollection("hero");
---

<section class="hero-section hero-1">
  <Swiper
    options={{
      // check options at https://swiperjs.com/swiper-api
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
        waitForTransition: false,
      },
      loop: true,
      freeMode: true,
    }}
  >
    <SwiperWrapper>
      {
        slides.map((slide) => (
          <SwiperSlide>
            <div class="swiper-slide">
              <div class="hero-slide">
                <div
                  class="hero-bg"
                  style={`background-image: url(${slide.data.backgroundimage});`}
                >
                  <div class="container">
                    <div class="row align-items-center min-vh-100">
                      <div class="col-lg-6">
                        <div class="hero-content">
                          {/* <h6 class="animate-up text-black">
                            {slide.data.title}
                          </h6> */}
                          <h1 class="animate-up text-var(--red) mt-4">
                            {slide.data.heading}
                          </h1>
                          <p class="animate-up text-var(--red)">
                            {slide.data.description}
                          </p>
                          {/* <div class="animate-up mt-4">
                            <a href="#products" class="theme-btn">
                              Explore Now
                            </a>
                          </div> */}
                        </div>
                      </div>
                      <div class="col-lg-6">
                        <div class="hero-image">
                          <img
                            src={slide.data.image}
                            alt={slide.data.title}
                            width="880"
                            height="620"
                            loading="eager"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </SwiperSlide>
        ))
      }
    </SwiperWrapper>
  </Swiper>
</section>
<style>
  .hero-section {
    height: 400px; /* Changed from 640px */
    position: relative;
    overflow: hidden;
  }

  .hero-section .row {
    min-height: 400px !important;
    padding-top: 40px; /* Add padding to top */
  }

  .hero-content {
    padding-top: 20px; /* Add space at top */
    margin-bottom: 30px; /* Add space at bottom */
  }

  /* Adjust vertical alignment */
  .row.align-items-center {
    align-items: flex-start !important; /* Change from center to top */
  }

  .hero-image {
    position: relative;
    padding: 0 15px; /* Adjust padding */
    transition: transform 0.3s ease;
    margin-top: -20px; /* Pull image up slightly */
  }

  .hero-image img {
    max-height: 400px; /* Reduced from 550px */
    width: auto;
    object-fit: contain;
  }

  /* Tablet and smaller desktop */
  @media (max-width: 1200px) {
    .hero-image img {
      max-width: 100%;
      height: auto;
    }
  }

  /* Mobile devices */
  @media (max-width: 991px) {
    .hero-section {
      height: auto;
      min-height: 140px; /* Changed from 680px */
    }

    .hero-section .row {
      padding-top: 20px;
    }

    .hero-content {
      padding-top: 10px;
      margin-bottom: 20px;
    }

    .hero-image {
      margin-top: 0;
    }
  }

  /* Small mobile devices */
  @media (max-width: 576px) {
    .hero-section {
      min-height: 20px; /* Reduced height */
    }

    .hero-section .row {
      padding-top: 15px;
    }

    .hero-content {
      padding-top: 5px;
      margin-bottom: 15px;
    }
  }

  /* Optional: Add hover effect */
  @media (min-width: 992px) {
    .hero-image:hover {
      transform: translateY(-3px); /* Reduced movement */
    }

    .hero-image img:hover {
      transform: scale(1.01); /* Reduced scale effect */
    }
  }
</style>

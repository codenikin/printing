---
import { getCollection } from "astro:content";
const services = await getCollection("services");
---

<section class="service-section fix section-padding animated-bg">
  <div class="container">
    <div class="section-title text-center">
      <div class="sub-title wow fadeInUp">
        <span>our services</span>
      </div>
      <h2 class="split-text right">Explore Our All Catagories</h2>
    </div>
    <div class="row">
      {
        services.map((service) => (
          <div
            class="col-lg-6"
            data-aos="fade-up"
            data-aos-anchor-placement="top-bottom"
            data-aos-duration="1500"
          >
            <div class="service-card-items">
              <div class="service-thumb">
                <img src={service.data.image} alt={service.data.title} />
              </div>
              <div class="service-content">
                <h3>
                  <a href={service.data.link}>{service.data.title}</a>
                </h3>
                <p>{service.data.description}</p>
                <a href={service.data.link} class="link-btn">
                  Read More <i class="far fa-long-arrow-right" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .animated-bg {
    background: linear-gradient(-45deg, #842508, #e73c7e, #113e4e, #23d5ab);
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
    position: relative;
  }

  .animated-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.92);
    z-index: 1;
  }

  .animated-bg > .container {
    position: relative;
    z-index: 2;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Optional: Add some polish to the service cards */
  .service-card-items {
    backdrop-filter: blur(5px);
    background: rgba(255, 255, 255, 0.8);
    transition: transform 0.3s ease;
    border-radius: 15px;
    overflow: hidden;
  }

  .service-card-items:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
</style>

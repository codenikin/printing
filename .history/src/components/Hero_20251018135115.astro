---
import { Swiper, SwiperWrapper, SwiperSlide } from "astro-swiper";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
const slides: CollectionEntry<"Hero">[] = await getCollection("Hero");
interface Props {
  slides: CollectionEntry<"Hero">[];
}
---

<section class="hero-section hero-1">
  <Swiper
    options={{
      // check options at https://swiperjs.com/swiper-api
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
        waitForTransition: false,
      },
      loop: true,
      freeMode: true,
    }}
  >
    <SwiperWrapper>
      <!-- Slides -->

      {
        slides.map((slide) => (
          <SwiperSlide>
            <div class="swiper-slide">
              <div class="hero-slide">
                <div
                  class="hero-bg"
                  style={`background-image: url(${slide.background});`}
                >
                  <div class="container">
                    <div class="row align-items-center min-vh-100">
                      <div class="col-lg-6">
                        <div class="hero-content">
                          <h6 class="animate-up text-black">{slide.title}</h6>
                          <h1 class="animate-up text-black mt-4">
                            {slide.heading}
                          </h1>
                          <p class="animate-up text-black">
                            {slide.description}
                          </p>
                          <div class="animate-up mt-4">
                            <a href="#products" class="theme-btn">
                              Explore Now
                            </a>
                          </div>
                        </div>
                      </div>
                      <div class="col-lg-6">
                        <div class="hero-image">
                          <img
                            src={slide.image}
                            alt={slide.title}
                            width="880"
                            height="620"
                            loading="eager"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </SwiperSlide>
        ))
      }
    </SwiperWrapper>
  </Swiper>
</section>
<style>
  .hero-section {
    height: 640px;
    position: relative;
    overflow: hidden;
  }

  .hero-section .row {
    min-height: 680px !important;
  }

  .hero-image {
    position: relative;
    padding: 20px;
    transition: transform 0.3s ease;
  }

  /* Tablet and smaller desktop */
  @media (max-width: 1200px) {
    .hero-image img {
      max-width: 100%;
      height: auto;
    }
  }

  /* Mobile devices */
  @media (max-width: 991px) {
    .hero-section {
      height: auto;
      min-height: 680px;
    }

    .hero-image {
      margin-top: 30px;
      padding: 15px;
    }

    .hero-image img {
      max-height: 500px;
      width: 100%;
      object-fit: contain;
    }
  }

  /* Small mobile devices */
  @media (max-width: 576px) {
    .hero-section {
      min-height: 600px;
    }

    .hero-image {
      margin-top: 20px;
      padding: 10px;
    }

    .hero-image img {
      max-height: 400px;
      width: 100%;
      object-fit: contain;
    }
  }

  /* Optional: Add hover effect */
  @media (min-width: 992px) {
    .hero-image:hover {
      transform: translateY(-5px);
    }

    .hero-image img:hover {
      transform: scale(1.02);
    }
  }
</style>

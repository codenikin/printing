---
import { getCollection } from "astro:content";
import BootstrapTabs from "./BootstrapTabs.astro";
const products = await getCollection("products");
const navItems = [
  { id: "Business", label: "Business Cards", delay: "0.2s" },
  { id: "Books", label: "Books & Prints", delay: "0.4s", active: true },
  { id: "Cloths", label: "T-shirt & Cloths", delay: "0.5s" },
  { id: "Card", label: "Invitation Card", delay: "0.6s" },
];

const productsByCategory = products.reduce(
  (acc, product) => {
    const category = String(product.data.category);
    if (!acc[category]) {
      acc[category] = [];
    }
    acc[category].push(product);
    return acc;
  },
  {} as Record<string, (typeof products)[number][]>
);
---

<section class="shop-section fix section-padding pt-8">
  <div class="container">
    <div class="section-title text-center">
      <div class="sub-title wow fadeInUp">
        <span>Our Services</span>
      </div>
      <h2 class="split-text right">Explore Features Product</h2>
    </div>
    <div class="product-header mt-4 mt-md-0">
      <ul class="nav nav-tabs" role="tablist">
        {
          navItems.map((item) => (
            <li
              class="nav-item wow fadeInUp"
              data-wow-delay={item.delay}
              role="presentation"
            >
              <button
                type="button"
                role="tab"
                id={`${item.id}-tab`}
                data-bs-toggle="tab"
                data-bs-target={`#${item.id}`}
                aria-controls={item.id}
                aria-selected={item.active ? "true" : "false"}
                class={`nav-link ${item.active ? "active" : ""}`}
              >
                {item.label}
              </button>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="tab-content">
      {
        navItems.map((item) => (
          <div
            class={`tab-pane fade ${item.active ? "show active" : ""}`}
            id={item.id}
            role="tabpanel"
            aria-labelledby={`${item.id}-tab`}
          >
            <div class="row">
              {productsByCategory[item.id.toLowerCase()]?.map((product) => (
                <div class="col-xl-3 col-lg-4 col-md-6">
                  <div class="shop-items style-2">
                    <div class="shop-image">
                      <img src={product.data.image} alt={product.data.title} />
                      <ul class="product-icon d-grid justify-content-center align-items-center">
                        <li>
                          <a href="shop-cart.html">
                            <i class="far fa-heart" />
                          </a>
                        </li>
                        <li>
                          <a href="shop-details.html">
                            <i class="far fa-exchange" />
                          </a>
                        </li>
                        <li>
                          <a href="shop-details.html">
                            <i class="far fa-eye" />
                          </a>
                        </li>
                        <li>
                          <a href="shop-cart.html">
                            <i class="fal fa-cart-plus" />
                          </a>
                        </li>
                      </ul>
                      {product.data.offerText && (
                        <div class="offer-text">{product.data.offerText}</div>
                      )}
                    </div>
                    <div class="shop-content">
                      <h5>
                        <a href="shop-details.html">{product.data.title}</a>
                      </h5>
                      <ul class="price-list">
                        <li>
                          ${product.data.price}
                          {product.data.salePrice && (
                            <del>${product.data.salePrice}</del>
                          )}
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<BootstrapTabs />
